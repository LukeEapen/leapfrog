###########################################
# Copy this file to `.env` and fill values #
# Never commit real secrets               #
###########################################

# OpenAI
OPENAI_API_KEY=

# Groq (optional)
GROQ_API_KEY=

# Google Gemini (optional)
GEMINI_API_KEY=

# Flask
FLASK_SECRET_KEY=
FLASK_ENV=development

# Jira / Atlassian
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_PROJECT_KEY=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS=false

# Feature flags (optional)
USE_GPT5_PREVIEW=false
MODEL_REQUIREMENTS=gpt-4o-mini

# Notes:
# - Generate Jira API token: https://id.atlassian.com/manage-profile/security/api-tokens
# - After editing, keep `.env` out of git (see .gitignore)
